# Environment
NODE_ENV=development

# Server
PORT=3000

# Database - PostgreSQL
# For local development: postgresql://postgres:password@localhost:5432/cartify
# For Neon (free): Get connection string from https://neon.tech
DATABASE_URL="postgresql://postgres:password@localhost:5432/cartify?schema=public"

# JWT - Generate secure secrets using: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-use-64-byte-random-hex
JWT_REFRESH_SECRET=your-super-secret-refresh-token-key-change-this-in-production-use-64-byte-random-hex
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# CORS
CORS_ORIGIN=http://localhost:5173

# Server Base URL (for file uploads)
BASE_URL=http://localhost:3000

# Redis (optional - leave empty to disable caching)
REDIS_URL=redis://localhost:6379
